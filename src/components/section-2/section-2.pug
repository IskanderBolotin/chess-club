mixin section-2()
  section.section-2
    div.container
      div.sectionContainer
        h2.__title 
          span.innerText 
            | Этапы преображения Васюков #[a.__link(href="/") Будущие источники обогащения васюкинцев]
        div.sectionGrid
          each item in gridContent
            div.__item 
              div.__inner
                +picture(stampImage.sources, stampImage.img, "stamp")
                +picture(stampBgImage.sources, stampBgImage.img, "stamp-bg")
                p.__text 
                  | !{item.text}
          +picture(planeImage.sources, planeImage.img, "plane")
